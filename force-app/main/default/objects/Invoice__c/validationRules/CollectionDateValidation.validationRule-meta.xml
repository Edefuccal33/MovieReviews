<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>CollectionDateValidation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
   (CollectionDate__c &lt; TODAY())
)</errorConditionFormula>
    <errorDisplayField>CollectionDate__c</errorDisplayField>
    <errorMessage>Collection date cannot be less than today</errorMessage>
</ValidationRule>
